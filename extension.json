{
  "displayName": "AWS",
  "name": "aws",
  "iconPath": "resources/icons/aws.svg",
  "version": "1.0.0",
  "description": "Server side extension that allows users to send data to AWS.",
  "author": {
    "name": "Adobe Systems",
    "url": "http://adobe.com",
    "email": "reactor@adobe.com"
  },
  "platform": "edge",
  "viewBasePath": "dist/",
  "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-06/schema#",
      "type": "object",
      "properties": {
        "credentials": {
          "type": "object",
          "properties": {
            "accessKeyId": {
              "type": "string",
              "minLength": 1
            },
            "secretAccessKey": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false,
          "required": ["accessKeyId", "secretAccessKey"]
        }
      },
      "additionalProperties": false,
      "required": ["credentials"]
    }
  },
  "actions": [
    {
      "name": "send-data-to-kinesis",
      "displayName": "Send Data to Kinesis",
      "libPath": "src/lib/actions/sendDataToKinesis.js",
      "viewPath": "actions/sendDataToKinesis.html",
      "schema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "method": {
            "type": "string",
            "minLength": 1,
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
          },
          "url": {
            "type": "string",
            "minLength": 1,
            "pattern": "https?:\\/\\/[-a-zA-Z0-9@:%._+~#=]{1,256}\\.[a-zA-Z0-9()]+\\b([-a-zA-Z0-9()@:%_+.~#?&//=]*)"
          },
          "headers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string",
                  "minLength": 1
                },
                "value": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false,
            "required": ["key", "name"]
          },
          "body": {
            "oneOf": [
              {
                "type": "object"
              },
              {
                "type": "string"
              }
            ]
          },
          "responseKey": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false,
        "required": ["method", "url"]
      }
    }
  ]
}
